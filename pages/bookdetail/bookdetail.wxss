/* pages/bookdetail/bookdetail.wxss */

page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
  background-color: #f1f1f1;
}

.swiper-view {
  width: 80%;
  height: 66%;
}

.swiper-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
}

.slide-image {
  height: 800rpx;
}

.page-count-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.page-current-count {
  font-size: 24px;
  color: #febe28;
  margin-right: 4rpx;
}

.page-total-count {
  font-size: 24px;
  color: #333;
}

.page-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
}

.en-view {
  font-size: 18px;
  color: #000;
  padding-left: 16rpx;
  padding-right: 16rpx;
  text-align: center;
  max-lines: 2;
}

.cn-view {
  font-size: 14px;
  color: #555;
  margin-top: 10rpx;
  text-align: center;
  max-lines: 2;
}

.play-view {
  width: 100%;
  height: 160rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.pre-img{
  width: 100rpx;
  height: 100rpx;
}
.play-img{
  width: 120rpx;
  height: 120rpx;
  margin-left: 120rpx;
  margin-right: 120rpx;
}
.next-img{
  width: 100rpx;
  height: 100rpx;
}